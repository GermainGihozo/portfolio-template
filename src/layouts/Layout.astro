---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="I specialize in creating cohesive, efficient, and effective web applications that seamlessly integrate front-end and back-end technologies."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global lang="scss">
  @import "../css/color";

  html {
    font-family: system-ui, sans-serif;
    color: $txt-color;
    scroll-behavior: smooth;
    overflow-x: hidden;
    background-image: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
  }

  ::selection {
    background-color: $txt-color;
    color: $bg-color;
  }

  body {
    max-width: 1280px;
    width: min(100ch, 100% - 4rem);
    margin-inline: auto;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  button,
  .btn {
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.6em 1.2em;
    font-size: 1em;
    font-weight: 500;
    font-family: inherit;
    cursor: pointer;
    transition: transform 300ms;
    background-color: #dcd9d4;
    background-blend-mode: soft-light, screen;
    color: darken($txt-color, 100%);
    max-width: fit-content;
    text-decoration: none;
    display: block;
  }
  button:hover,
  .btn:hover {
    transform: translateY(-5%);
  }
  button:focus,
  button:focus-visible {
    transform: scale(0.99);
  }

  p {
    margin-block: 1rem;
  }

  a,
  .underline {
    text-decoration: none;
    color: inherit;
    transition: all 0.4s ease;
    padding-inline: 0.5rem;
    position: relative;
  }
  a,
  button {
    outline-color: lighten($txt-color, 60%);
  }

  .underline {
    padding-inline: 0;
  }
  a.link::before,
  .underline::before {
    position: absolute;
    content: "";
    height: 0.3rem;
    width: 0%;
    transition: width 0.3s;
    background-color: white;
    bottom: -0.4rem;
    left: 0;
  }

  .underline::before {
    width: 5%;
    height: 1rem;
    background-color: white;
    top: 50%;
    left: 0;
    transform: translate(-50%, -120%);
    z-index: -1;
  }

  a.link:hover::before {
    width: 100%;
  }

  span,
  input,
  textarea {
    padding: 0.2em 0.6em;
    font-size: 0.8em;
    background-color: white;
    display: inline-block;
    border: none;

    &:focus {
      outline: #dcd9d4;
    }
  }
  span {
    background-color: lighten($bg-color, 100%);
    margin-right: 0.2rem;
    margin-bottom: 0.2rem;
  }

  footer {
    margin-block: 4rem;
    text-align: center;
  }
</style>
