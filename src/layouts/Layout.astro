---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="I specialize in creating cohesive, efficient, and effective web applications that seamlessly integrate front-end and back-end technologies. My deep understanding of both development areas allows me to deliver robust applications with exceptional user experiences."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer>
      <p>
        I love creativity, creativity is my culture. &copy; muslim
        uwitondanishema {new Date().getFullYear()}
      </p>
    </footer>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-color: #ffbf00;
    color: #574100;
    scroll-behavior: smooth;
  }
  ::selection {
    background-color: #c09000;
    color: white;
  }

  body {
    max-width: 1280px;
    width: min(100ch, 100% - 4rem);
    margin-inline: auto;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  button,
  .btn {
    border-radius: 8px;
    border: none;
    padding: 0.6em 1.2em;
    font-size: 1em;
    font-weight: 500;
    font-family: inherit;
    cursor: pointer;
    transition: all 0.25s;
    background-color: #725600;
    color: #fbe296;
    max-width: fit-content;
    text-decoration: none;
    display: block;
  }
  button:hover,
  .btn:hover {
    transform: scale(0.99);
    background-color: #a17900;
  }
  button:focus,
  button:focus-visible {
    transform: scale(0.99);
  }

  p {
    margin-block: 1rem;
  }

  a,
  .underline {
    text-decoration: none;
    color: inherit;
    transition: all 0.4s ease;
    padding-inline: 0.5rem;
    position: relative;
  }
  a,
  button {
    outline-color: #f8dd8dc8;
  }

  .underline {
    padding-inline: 0;
  }
  a.link::before,
  .underline::before {
    position: absolute;
    content: "";
    height: 0.3rem;
    width: 0%;
    transition: width 0.3s;
    background-color: white;
    bottom: -0.4rem;
    left: 0;
  }

  .underline::before {
    width: 5%;
    height: 1rem;
    border-radius: 100vmax;
    background-color: rgba(255, 255, 255, 0.435);
    top: 50%;
    left: 0;
    transform: translate(-50%, -120%);
    z-index: -1;
  }

  a.link:hover::before {
    width: 100%;
  }

  span,
  input,
  textarea {
    border-radius: 0.4rem;
    border: 1px solid transparent;
    padding: 0.2em 0.6em;
    font-size: 0.8em;
    background-color: #f8dd8d;
    display: inline-block;
    margin: 0.2rem;
  }

  footer {
    margin-block: 4rem;
    text-align: center;
  }
</style>
