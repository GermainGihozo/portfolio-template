<style>
  html {
    overflow-x: scroll;
  }
  .page {
    width: 870px;
    height: 1200px;
    background-color: #fff;
    margin-block: 20px;
    margin-inline: auto;
    box-shadow: 0 0 0 20px 10px -7px 19px 0px #00000014;
    padding: 2rem;
    overflow: hidden;
  }
  article {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }

  main > div {
    margin-bottom: 2rem;
  }
  small {
    color: #555555;
  }

  img {
    width: 7rem;
    height: 7rem;
    border-radius: 50%;
  }

  span {
    width: 0.5rem;
    padding: 0;
  }

  p {
    gap: 0.5rem;
    margin: 0;
  }
  p:has(svg) {
    display: flex;
  }
  path {
    fill: #a07802;
  }
  li {
    margin-left: 1rem;
    margin-top: 0.4rem;
  }
  .main {
    display: grid;
    margin-top: 2rem;
    grid-template-columns: 45% auto;

    & aside {
      transform: translateX(-2rem);
      background-color: #ffc00488;
      padding: 1rem 2rem;

      & div {
        margin-bottom: 2rem;
      }

      & p,
      & li {
        margin-top: 0.4rem;
      }
    }

    & > * {
      height: 1200px;
    }
  }
  .upper {
    text-transform: uppercase;
    margin-bottom: 1rem;
  }
  .underline::before {
    height: 0.2rem;
    width: 20%;
    background-color: #775a015e;
    transform: translate(0, 0.7rem);
    z-index: 1;
  }
</style>
